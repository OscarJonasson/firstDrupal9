{#
<div id="header">{{ page.header }}</div>
<div id="content">{{ page.content }}</div>
<div id="sidebar">{{ page.sidebar }}</div>
<div id="footer">{{ page.footer }}</div>
#}

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
  </head>
  <body>
    <header class="header">
      {{ page.header }}
      <div class="heading"></div>
      <nav class="menu">
        {{ page.menu }}
      </nav>
    </header>
    <main class="main">
      <div class="content">
        {{ page.content }}
      </div>
      {% if page.sidebar %}
      <div class="sidebar"></div>
      {% endif %}
    </main>
    <footer class="footer">
      {{ page.footer }}
    </footer>
  </body>
</html>
